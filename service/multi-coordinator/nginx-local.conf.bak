
#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;

#pid        logs/nginx.pid;


events {
    worker_connections  1024;
}



http {
  access_log /dev/stdout;

  server {
          listen 46011;
          return 307 http://127.0.0.1:8080$request_uri;
  }

  server {
          listen 46012;
          return 307 http://127.0.0.1:8081$request_uri;
  }

  server {
      listen 10001;
#       server_name coordinator1.com;
      location / {
          proxy_set_header Host       http:localhost:9292/coordinator1;
          proxy_pass http://localhost:8080/;
      }
  }

  server {
        listen 10002;
#           server_name coordinator2.com;
          location / {
              proxy_set_header Host       $host/coordinator2;
              proxy_pass http://localhost:8081/;
          }
      }

  upstream coordinators {
          server 127.0.0.1:10001;
          server 127.0.0.1:10002;
  }

  upstream coordinators_redirect {
          server 127.0.0.1:46011;
          server 127.0.0.1:46012;
  }

   server {
      listen 9292;

#       server_name  trino.local;
      location / {
    #       proxy_set_header Host $proxy_add_x_forwarded_for:8080;
    #       proxy_set_header X-Real-IP $remote_addr;
#            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
#            proxy_set_header X-Forwarded-Proto $scheme;
#            proxy_set_header Host       $upstream_addr;
         proxy_pass http://coordinators_redirect;
      }
    }
}

